<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeMenu_EditAvtivity"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/notice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/notice" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@color/foreground"
            android:elevation="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/noticechange_cardview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="12dp"
                app:cardElevation="2.5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="1dp">

                <androidx.cardview.widget.CardView
                    layout_width="match_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="18dp">


                        <EditText
                            android:id="@+id/notice_board_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoLink="web"
                            android:text="updating..."

                            android:textIsSelectable="true"

                            android:textSize="14sp"


                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"

                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_noticechange"

                    android:text="OK" />
            </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mess_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/menupic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="       "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/breakfast_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="Breakfast"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="Lunch"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent"
                android:textSize="@dimen/abc_text_size_small_material" />


            <TextView
                android:id="@+id/dinner_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="Dinner"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent"
                android:textSize="@dimen/abc_text_size_small_material"
                android:visibility="visible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler_menucard"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
</ScrollView>

